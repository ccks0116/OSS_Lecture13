// project.cpp : 콘솔 응용 프로그램에 대한 진입점을 정의합니다.
//

#include "stdafx.h"
#include "stdlib.h"
#include "windows.h"
#include "time.h"
#include "conio.h" //_kbhit(),getch()를 사용하기위한 헤더파일

void elpTime();
void pTime();

int c = 0;
int s = 0, m = 0, h = 0;
int state = NULL;

int main()
{
	while (1) {
		system("cls");
		if (_kbhit() != 0) //키보드 버퍼값이 있으면 반복문을 빠져나옴
		{
			state = getch();
			if (state = '1'){
				break;
			}
		}

		elpTime();
		pTime();
		printf("숫자키 입력\n1.종료");
		Sleep(50);

	}

	system("pause");
	return 0;
}

void elpTime() {		//elapse time 경과시간
	c = clock() / 10; //clock()는 1/1000초를 반환하므로 1초로 단위 변경
	m = (c / 60) % 60;
	h = c / 3600;

	printf("경과시간 %.2d:%.2d\n", h, m);

}

void pTime() {	//present time 현재시간
	struct tm *t;
	time_t timer;
	timer = time(NULL);
	t = localtime(&timer);
	printf("현재시간 %.2d:%.2d\n", t->tm_hour, t->tm_min);
}
